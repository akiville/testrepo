@model Qtc.Branch.BusinessEntities.BranchRequisition
@{
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <title>qResto - Signin</title>
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "container" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(s => s.mReturnUrl)

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-10 col-lg-12 col-md-9">
                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row">
                                <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <img class="mb-4" src="~/css/images/paotsin2.png" alt="" width="250" height="130">
                                        </div>

                                        <form class="user">

                                            <div>
                                                @if (TempData["ErrorMSG"] != null)
                                                {
                                                    <label style="color:maroon;"> @TempData["ErrorMSG"] </label>
                                                    <br /><br />
                                                }
                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.mEmployeeId, htmlAttributes: new { @class = "control-label col-md-6" })
                                                @Html.TextBoxFor(m => m.mEmployeeId, new { @class = "form-control form-control-user", placeholder = "Enter Employee Id", required = "required autofocus" })
                                             
                                         
                                                @*<input type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Email Address...">*@
                                            </div>
                                            <div class="form-group">
                                                @*<input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Password">*@
                                                @Html.LabelFor(model => model.mCode, htmlAttributes: new { @class = "control-label col-md-6" })
                                                @Html.TextBoxFor(m => m.mCode, new { @class = "form-control form-control-user", placeholder = "Enter Code", required = "required" })
                                            </div>

                                            <input type="submit" value="Submit" class="btn btn-primary btn-user btn-block" />
                                            @*<a href="index.html" class="btn btn-primary btn-user btn-block">
                                                    Login
                                                </a>*@
                                            @*<hr>
                                                <a href="~/Register/Create" class="btn btn-google btn-user btn-block">
                                                    <i class="fab fa-registered fa-fw"></i> Register
                                                </a>
                                                <a href="~/Test/index" class="btn btn-facebook btn-user btn-block">
                                                    <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                                </a>*@
                                        </form>
                                        <hr>
                                        <div class="text-center">
                                            <a class="small" href="forgot-password.html">Forgot Password?</a>
                                        </div>
                                        <div class="text-center">
                                            <a class="small" href="~/Register/Create">Create an Account!</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
    @if (@ViewBag.Message != null)
            {
        <script type="text/javascript">
            $(function () {
                $("#dvMessage").show();
            });
        </script>
    }
</body>
</html>

